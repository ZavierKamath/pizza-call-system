cat >> .gitignore << 'EOF'

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local
*.env

# API Keys and Secrets
secrets/
*.key
*.pem

# Database files
*.db
*.sqlite
*.sqlite3

# Log files
logs/
*.log

# Cache and temporary files
__pycache__/
*.pyc
*.pyo
*.pyd
.Python
.pytest_cache/
.coverage

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Node modules (for frontend)
node_modules/
dist/
build/

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
EOF